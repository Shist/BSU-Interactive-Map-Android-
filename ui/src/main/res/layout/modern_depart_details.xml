<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/modern_depart_logotype_and_link"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="left|top"
        android:gravity="left|top"
        android:foreground="@drawable/logo_upqualfac"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/modern_depart_title"
        app:layout_constraintBottom_toTopOf="@id/modern_depart_img_spinner" />


    <TextView
        android:id="@+id/modern_depart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/building_blank"
        android:textColor="@color/bsu"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_horizontal|top"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/modern_depart_logotype_and_link"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modern_depart_img_spinner" />

    <Spinner
        android:id="@+id/modern_depart_img_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modern_depart_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modern_depart_address_info" />

    <TextView
        android:id="@+id/modern_depart_address_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/no_data_at_db_label_blank"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="normal"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modern_depart_img_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modern_depart_hist_info_title" />

    <TextView
        android:id="@+id/modern_depart_hist_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/historical_information"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="normal"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modern_depart_address_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/modern_depart_hist_info_text" />

    <TextView
        android:id="@+id/modern_depart_hist_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/no_data_at_db_label_blank"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="normal"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modern_depart_hist_info_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>